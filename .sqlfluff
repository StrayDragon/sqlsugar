[sqlfluff]
# SQLFluff configuration for SQLSugar project
# MySQL dialect with SQLAlchemy placeholder support

dialect = mysql
max_line_length = 120
indent_unit = space
tab_space_size = 2
templater = placeholder

[sqlfluff:templater:placeholder]
param_style = colon

# Rules configuration
[sqlfluff:rules]
L019.comma_style = "leading"
L031.allow_select_without_from = true
L034.select_wildcards = false
L036.select_targets = false
L029.keywords = false
L040.null_comparison = false
L061.not_equal_style = "c_style"