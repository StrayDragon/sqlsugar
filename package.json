{
  "name": "sqlsugar",
  "displayName": "sqlsugar",
  "description": "SQLSugar enables inline SQL editing across multiple programming languages with advanced features like Jinja2 template processing and precise SQL synchronization.",
  "version": "0.0.1",
  "publisher": "l8ng",
  "engines": {
    "pnpm": ">=10",
    "vscode": "^1.74.0"
  },
  "type": "module",
  "enabledApiProposals": [],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "types": "./dist/types/extension.d.ts",
  "contributes": {
    "commands": [
      {
        "command": "sqlsugar.editInlineSQL",
        "title": "SQLSugar: Edit Inline SQL"
      },
      {
        "command": "sqlsugar.toggleDebugMode",
        "title": "SQLSugar: Toggle Debug Mode"
      },
      {
        "command": "sqlsugar.copyJinja2Template",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Generate Demo)"
      },
      {
        "command": "sqlsugar.copyJinja2TemplateQuick",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Quick Demo)"
      },
      {
        "command": "sqlsugar.copyJinja2TemplateWebview",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Visual Editor)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sqlsugar.editInlineSQL",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateWebview",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "sqlsugar.toggleDebugMode"
        },
        {
          "command": "sqlsugar.copyJinja2Template"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateQuick"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateWebview"
        }
      ]
    },
    "configuration": {
      "title": "SQLSugar",
      "properties": {
        "sqlsugar.tempFileCleanup": {
          "type": "boolean",
          "default": true,
          "description": "Auto cleanup temporary files"
        },
        "sqlsugar.cleanupOnClose": {
          "type": "boolean",
          "default": true,
          "description": "If true, delete temp SQL file on editor close; if false, delete on save when tempFileCleanup is enabled"
        },
        "sqlsugar.showSQLPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show preview of original and injected SQL after copying"
        },
        "sqlsugar.sqlSyntaxHighlightTheme": {
          "type": "string",
          "enum": [
            "vscode-dark",
            "vscode-light",
            "github-dark",
            "github-light",
            "solarized-dark",
            "solarized-light"
          ],
          "default": "vscode-dark",
          "description": "SQL syntax highlighting theme for WebView"
        },
        "sqlsugar.sqlSyntaxHighlightFontSize": {
          "type": "number",
          "default": 14,
          "minimum": 10,
          "maximum": 20,
          "description": "Font size for SQL syntax highlighting"
        },
        "sqlsugar.jinja2TypeInference.customRules": {
          "type": "array",
          "default": [],
          "description": "Custom type inference rules for Jinja2 variables",
          "items": {
            "type": "object",
            "required": [
              "name",
              "pattern",
              "type"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Rule name"
              },
              "pattern": {
                "type": "string",
                "description": "Regular expression pattern to match variable names"
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean",
                  "date",
                  "time",
                  "datetime",
                  "json",
                  "uuid",
                  "email",
                  "url"
                ],
                "description": "Variable type"
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.8,
                "description": "Confidence level (0-1)"
              },
              "description": {
                "type": "string",
                "description": "Rule description"
              },
              "subType": {
                "type": "string",
                "description": "Sub-type category"
              },
              "format": {
                "type": "string",
                "description": "Default format suggestion"
              }
            }
          },
          "sqlsugar.logLevel": {
            "type": "string",
            "enum": [
              "error",
              "warn",
              "info",
              "debug",
              "none"
            ],
            "default": "error",
            "description": "Log level for WebView console output. 'error' shows only errors, 'none' disables all logs."
          },
          "sqlsugar.enableWlCopyFallback": {
            "type": "boolean",
            "default": true,
            "description": "Enable wl-copy fallback for clipboard operations on Linux Wayland systems"
          }
        }
      }
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:declarations && node esbuild.js",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:declarations && node esbuild.js --production",
    "build:declarations": "tsc --declaration --emitDeclarationOnly --project tsconfig.declarations.json",
    "vsix": "vsce package --no-yarn --no-dependencies --out sqlsugar.vsix",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist/ out/ *.vsix",
    "build": "pnpm run compile"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "lit": "^3.3.1",
    "nunjucks": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StrayDragon/sqlsugar"
  },
  "icon": "icon.png",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^27.0.0",
    "@types/node": "22.x",
    "@types/nunjucks": "^3.2.6",
    "@types/vscode": "1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "@vscode/vsce": "^3.6.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}