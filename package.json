{
  "name": "sqlsugar",
  "displayName": "sqlsugar",
  "description": "SQLSugar enables inline SQL editing across multiple programming languages with sqls LSP support and advanced features like Jinja2 template processing and terminal SQL extraction.",
  "version": "0.0.1",
  "publisher": "l8ng",
  "type": "module",
  "engines": {
    "vscode": "^1.98.0"
  },
  "enabledApiProposals": [],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sqlsugar.editInlineSQL",
    "onCommand:sqlsugar.copyJinja2Template"
  ],
  "main": "./dist/extension.js",
  "types": "./dist/types/extension.d.ts",
  "contributes": {
    "commands": [
      {
        "command": "sqlsugar.editInlineSQL",
        "title": "SQLSugar: Edit Inline SQL"
      },
      {
        "command": "sqlsugar.switchConnection",
        "title": "SQLSugar: Switch Database Connection"
      },
      {
        "command": "sqlsugar.toggleDebugMode",
        "title": "SQLSugar: Toggle Debug Mode"
      },
      {
        "command": "sqlsugar.copyJinja2Template",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Generate Demo)"
      },
      {
        "command": "sqlsugar.copyJinja2TemplateQuick",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Quick Demo)"
      },
      {
        "command": "sqlsugar.copyJinja2TemplateWebview",
        "title": "SQLSugar: Copy Jinja2 Template SQL (Visual Editor)"
      },
      {
        "command": "sqlsugar.configureJinja2TypeRules",
        "title": "SQLSugar: Configure Jinja2 Type Rules"
      },
      {
        "command": "sqlsugar.exportJinja2TypeRules",
        "title": "SQLSugar: Export Jinja2 Type Rules"
      },
      {
        "command": "sqlsugar.importJinja2TypeRules",
        "title": "SQLSugar: Import Jinja2 Type Rules"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sqlsugar.editInlineSQL",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateWebview",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "sqlsugar.switchConnection"
        },
        {
          "command": "sqlsugar.toggleDebugMode"
        },
        {
          "command": "sqlsugar.copyJinja2Template"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateQuick"
        },
        {
          "command": "sqlsugar.copyJinja2TemplateWebview"
        },
        {
          "command": "sqlsugar.configureJinja2TypeRules"
        },
        {
          "command": "sqlsugar.exportJinja2TypeRules"
        },
        {
          "command": "sqlsugar.importJinja2TypeRules"
        }
      ]
    },
    "configuration": {
      "title": "SQLSugar",
      "properties": {
        "sqlsugar.sqlsPath": {
          "type": "string",
          "default": "sqls",
          "description": "Path to sqls executable"
        },
        "sqlsugar.tempFileCleanup": {
          "type": "boolean",
          "default": true,
          "description": "Auto cleanup temporary files"
        },
        "sqlsugar.cleanupOnClose": {
          "type": "boolean",
          "default": true,
          "description": "If true, delete temp SQL file on editor close; if false, delete on save when tempFileCleanup is enabled"
        },
        "sqlsugar.sqlsConfigPath": {
          "type": "string",
          "default": "",
          "description": "Path to sqls configuration file (leave empty to use default)"
        },
        "sqlsugar.showSQLPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show preview of original and injected SQL after copying"
        },
        "sqlsugar.sqlSyntaxHighlightTheme": {
          "type": "string",
          "enum": [
            "vscode-dark",
            "vscode-light",
            "github-dark",
            "github-light",
            "monokai",
            "solarized-dark",
            "solarized-light",
            "dracula"
          ],
          "default": "vscode-dark",
          "description": "SQL syntax highlighting theme for WebView"
        },
        "sqlsugar.sqlSyntaxHighlightFontSize": {
          "type": "number",
          "default": 14,
          "minimum": 10,
          "maximum": 20,
          "description": "Font size for SQL syntax highlighting"
        },
        "sqlsugar.jinja2TypeInference.customRules": {
          "type": "array",
          "default": [],
          "description": "Custom type inference rules for Jinja2 variables",
          "items": {
            "type": "object",
            "required": [
              "name",
              "pattern",
              "type"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Rule name"
              },
              "pattern": {
                "type": "string",
                "description": "Regular expression pattern to match variable names"
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean",
                  "date",
                  "time",
                  "datetime",
                  "json",
                  "uuid",
                  "email",
                  "url"
                ],
                "description": "Variable type"
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.8,
                "description": "Confidence level (0-1)"
              },
              "description": {
                "type": "string",
                "description": "Rule description"
              },
              "subType": {
                "type": "string",
                "description": "Sub-type category"
              },
              "format": {
                "type": "string",
                "description": "Default format suggestion"
              }
            }
          },
        "sqlsugar.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "none"
          ],
          "default": "error",
          "description": "Log level for WebView console output. 'error' shows only errors, 'none' disables all logs."
        }
      }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:declarations && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:declarations": "tsc --watch --declaration --emitDeclarationOnly --project tsconfig.declarations.json",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:declarations && node esbuild.js --production",
    "build:declarations": "tsc --declaration --emitDeclarationOnly --project tsconfig.declarations.json",
    "vsix": "pnpm run package && vsce package --no-yarn --no-dependencies --out sqlsugar.vsix",
        "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write 'src/**/*.{ts,js}' '!src/jinja2-editor/**/*'",
    "format:check": "prettier --check 'src/**/*.{ts,js}' '!src/jinja2-editor/**/*'",
    "format:all": "prettier --write 'src/**/*.{ts,js}'",
    "lint:main": "eslint src/core src/extension.ts src/types/result.ts src/indentationAnalyzer.ts src/jinja2-*.ts src/sqlalchemy-placeholder-processor.ts"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.4",
    "vscode-languageclient": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StrayDragon/sqlsugar"
  },
  "icon": "icon.png",
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22.x",
    "@types/nunjucks": "^3.2.6",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
        "@vscode/vsce": "^3.6.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "lit": "^3.3.1",
        "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
