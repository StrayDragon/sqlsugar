{
  "name": "sqlsugar",
  "displayName": "sqlsugar",
  "description": "edit inline sql literal in multi language with sqls lsp support",
  "version": "0.0.1",
  "publisher": "l8ng",
  "engines": {
    "vscode": "^1.98.0"
  },
  "enabledApiProposals": [
    "terminalDataWriteEvent"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sqlsugar.editInlineSQL",
    "onCommand:sqlsugar.copyTerminalSQL"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sqlsugar.editInlineSQL",
        "title": "SQLSugar: Edit Inline SQL"
      },
      {
        "command": "sqlsugar.switchConnection",
        "title": "SQLSugar: Switch Database Connection"
      },
      {
        "command": "sqlsugar.copyTerminalSQL",
        "title": "SQLSugar: Copy SQL (Injected)"
      },
      {
        "command": "sqlsugar.generateTestLogs",
        "title": "SQLSugar: Generate Test SQLAlchemy Logs"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sqlsugar.editInlineSQL",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "sqlsugar.copyTerminalSQL",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "terminal/context": [
        {
          "command": "sqlsugar.copyTerminalSQL",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "sqlsugar.switchConnection"
        },
        {
          "command": "sqlsugar.copyTerminalSQL"
        },
        {
          "command": "sqlsugar.generateTestLogs"
        }
      ]
    },
    "configuration": {
      "title": "SQLSugar",
      "properties": {
        "sqlsugar.sqlsPath": {
          "type": "string",
          "default": "sqls",
          "description": "Path to sqls executable"
        },

        "sqlsugar.tempFileCleanup": {
          "type": "boolean",
          "default": true,
          "description": "Auto cleanup temporary files"
        },
        "sqlsugar.cleanupOnClose": {
          "type": "boolean",
          "default": true,
          "description": "If true, delete temp SQL file on editor close; if false, delete on save when tempFileCleanup is enabled"
        },

        "sqlsugar.sqlsConfigPath": {
          "type": "string",
          "default": "",
          "description": "Path to sqls configuration file (leave empty to use default)"
        },
        "sqlsugar.showSQLPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show preview of original and injected SQL after copying"
        },
        "sqlsugar.enableWlCopyFallback": {
          "type": "boolean",
          "default": true,
          "description": "Enable wl-copy fallback for clipboard operations on Wayland"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "vsix": "pnpm run package && vsce package --no-yarn --no-dependencies --out sqlsugar.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test --timeout=600000"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "js-yaml": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StrayDragon/sqlsugar"
  },
  "icon": "icon.png",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
