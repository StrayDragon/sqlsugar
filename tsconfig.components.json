{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/jinja2-editor-v2/types",
    "rootDir": "./src/jinja2-editor-v2",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmit": false,
    "useDefineForClassFields": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "include": [
    "src/jinja2-editor-v2/**/*.ts"
  ],
  "exclude": [
    "src/jinja2-editor-v2/**/*.test.ts",
    "src/jinja2-editor-v2/**/test-dom-setup.ts"
  ]
}